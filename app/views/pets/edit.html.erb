<h2> Update Pet </h2>

<div class='form'>
<%= form_tag "/pets/#{@pet.id}", method: :patch do %>

	<p><%= label_tag :image %>
	<%= text_field_tag :image %></p>

	<p><%= label_tag :name %>
	<%= text_field_tag :name %></p>

	<p><%= label_tag :description %>
	<%= text_field_tag :description %></p>

	<p><%= label_tag :age %>
	<%= number_field_tag :age %></p>

	<p><%= label_tag :sex %>
	<%= text_field_tag :sex %></p>

	<%= submit_tag "Update Pet" %>
<% end %>
</div>
