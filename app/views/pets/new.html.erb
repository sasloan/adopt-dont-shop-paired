<h2> Create Pet </h2>

<%= form_tag "/shelters/#{@shelter.id}/pets", method: :post do %>

	<%= label_tag :name %>
	<%= text_field_tag :name %>

	<%= label_tag :approximate_age %>
	<%= number_field_tag :approximate_age %>

	<%= label_tag :sex %>
	<%= text_field_tag :sex %>

	<%= submit_tag "Submit" %>
<% end %>
