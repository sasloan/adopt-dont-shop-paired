<div class='form'>
	<%= form_tag path, method: method do %>
		<p><%= label_tag :title %>
		<%= text_field_tag :title, title %></p>

		<p><%= label_tag "Rating (1-5)" %>
		<%= text_field_tag :rating, rating %></p>

		<p><%= label_tag :content %>
		<%= text_field_tag :content, content %></p>

		<p><%= label_tag :image %>
		<%= text_field_tag :image, image %></p>

		<%= submit_tag button_text %>
	<% end %>
</div>
