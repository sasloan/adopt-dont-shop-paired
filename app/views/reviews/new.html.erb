<h2> New Review </h2>

<div class='form'>
<%= form_tag "/shelters/#{@shelter.id}/reviews" do %>

	<p><%= label_tag :title %>
	<%= text_field_tag :title %></p>

	<p><%= label_tag "Rating (1-5)" %>
	<%= text_field_tag :rating %></p>

	<p><%= label_tag :content %>
	<%= text_field_tag :content %></p>

	<p><%= label_tag :image %>
	<%= text_field_tag :image %></p>

	<%= submit_tag "Add Review" %>
<% end %>
</div>
