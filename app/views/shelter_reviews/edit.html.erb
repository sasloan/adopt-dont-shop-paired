<h2> Edit Review </h2>

<div class='form'>
<%= form_tag "/shelters/#{@review.shelter.id}/reviews/#{@review.id}", method: :patch do %>

	<p><%= label_tag :title %>
	<%= text_field_tag :title, @review.title %></p>

	<p><%= label_tag "Rating (1-5)" %>
	<%= text_field_tag :rating, @review.rating %></p>

	<p><%= label_tag :content %>
	<%= text_field_tag :content, @review.content %></p>

	<p><%= label_tag :image %>
	<%= text_field_tag :image, @review.image %></p>

	<%= submit_tag "Update Review" %>
<% end %>
</div>
