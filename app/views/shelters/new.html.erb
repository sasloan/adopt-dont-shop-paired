<h2> Create New Shelter </h2>

<div class='form'>
<%= form_tag "/shelters" do %>

	<p><%= label_tag :name %>
	<%= text_field_tag :name %></p>

	<p><%= label_tag :address %>
	<%= text_field_tag :address %></p>

	<p><%= label_tag :city %>
	<%= text_field_tag :city %></p>

	<p><%= label_tag :state %>
	<%= text_field_tag :state %></p>

	<p><%= label_tag :zip %>
	<%= text_field_tag :zip %></p>

	<%= submit_tag 'Create Shelter' %>
<% end %>
</div>
